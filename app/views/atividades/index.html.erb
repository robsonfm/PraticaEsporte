<p id="notice"><%= notice %></p>

<h1>Atividades</h1>
<h2><%= current_user.email %></h2>
<table>
  <thead>
    <tr>
      <th>Tipoatividade</th>
      <th>Titulo</th>
      <th>Duracao</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <%if atividade.usuario == current_user.email%>
        <tr>
          <td><%= atividade.tipoatividade %></td>
          <td><%= atividade.titulo %></td>
          <td><%= atividade.duracao %></td>
          <td><%= atividade.data %></td>
          <td><%= image_tag atividade.foto.url(:thumb) %></td>
          <td><%= link_to 'Show', atividade %></td>
          <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
          <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atividade', new_atividade_path %>
<%= link_to "Sair", destroy_user_session_path, method: :delete%>
